@model ClinicMVCApp.Models.Appointment
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-4">
    <h4>Delete Appointment</h4>
    <p>Are you sure you want to delete this appointment?</p>

    <div class="card">
        <div class="card-body">
            <p><strong>Patient:</strong> @Model.Patient?.FirstName @Model.Patient?.Surname</p>
            <p><strong>Date:</strong> @Model.Date.Value.ToString("yyyy-MM-dd")</p>
            <p><strong>Time:</strong> @Model.StartTime.Value.ToString(@"hh\:mm") – @Model.EndTime.Value.ToString(@"hh\:mm")</p>
            <p><strong>Type:</strong> @Model.AppointmentType</p>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3 text-end">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
