@model ClinicMVCApp.Models.Appointment
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-4">
    <h4>Appointment Details</h4>
    <div class="card">
        <div class="card-body">
            <p><strong>Patient:</strong> @Model.Patient?.FirstName @Model.Patient?.Surname</p>
            <p><strong>Type:</strong> @Model.AppointmentType</p>
            <p><strong>Date:</strong> @Model.Date.Value.ToString("yyyy-MM-dd")</p>
            <p><strong>Time:</strong> @Model.StartTime.Value.ToString(@"hh\:mm") – @Model.EndTime.Value.ToString(@"hh\:mm")</p>
            <p><strong>Status:</strong> @Model.Status</p>
        </div>
    </div>

    <div class="mt-3 text-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

