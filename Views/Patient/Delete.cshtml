@model ClinicMVCApp.Models.Patient
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container mt-4">
    <h4>Delete Patient</h4>
    <p>Are you sure you want to delete this patient?</p>

    <div class="card">
        <div class="card-body">
            <p><strong>Name:</strong> @Model.FirstName @Model.Surname</p>
            <p><strong>ID Number:</strong> @Model.IDNumber</p>
            <p><strong>Email:</strong> @Model.Email</p>
            @* <p><strong>Phone:</strong> @Model.Phone</p> *@
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post" class="mt-3 text-end">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
