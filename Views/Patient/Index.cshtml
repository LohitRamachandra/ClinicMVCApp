@model IEnumerable<ClinicMVCApp.Models.Patient>

<div class="container mt-4">
    <h4 class="mb-3">
        Patient List
    </h4>


    <table class="table table-bordered table-striped">
        <thead class="table-light">
        <tr>
            <th>First Name</th>
            <th>Surname</th>
            <th>ID Number</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patient in Model)
        {
            <tr>
                <td>@patient.FirstName</td>
                <td>@patient.Surname</td>
                <td>@patient.IDNumber</td>
                <td>@patient.Email</td>
                <td>
                        <a asp-action="Details" asp-route-id="@patient.Id" class="btn btn-sm btn-info">View</a> |
                        <a asp-action="Edit" asp-route-id="@patient.Id" class="btn btn-sm btn-warning">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@patient.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

    <div class="text-end mt-3">
        <a asp-action="Create" class="btn btn-primary">🏥 Add Patient</a>
    </div>
</div>
